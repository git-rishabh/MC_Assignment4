<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rishabh.testapp1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TaskPagerActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.example.rishabh.testapp1.TaskListActivity">
        </activity>
        <activity
            android:name=".AddTaskActivity"
            android:parentActivityName="com.example.rishabh.testapp1.TaskListActivity"
            android:label="Add New Task" >
        </activity>
        <activity android:name=".TaskListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>